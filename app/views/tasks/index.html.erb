<h1>Tasks</h1>
<% if @tasks.present? %>
  <ul>
    <% @tasks.each do |task| %>
    
  <li> <%= link_to task.title, task_path(task) %> [ <%= link_to 'X', delete_task_path(task), method: :delete , data: { confirm: "Do you want to delete #{task.title}?"} %> ]
      </li>

      
    <% end %>
  </ul>
<% else %>
  <p>no tasks</p>
<% end %>

